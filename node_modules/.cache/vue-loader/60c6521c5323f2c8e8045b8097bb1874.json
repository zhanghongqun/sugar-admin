        callback(null);\n        }\n      } else {\n        callback();\n      }\n    };\n    return {\n      fileList:[],\n      headers: {\"Authorization\": 'Bearer '+getToken()},\n      postTask: Object.assign({}, defaultTask),\n      fetchSuccess: true,\n      loading: false,\n      limit:1,\n      userLIstOptions: [],\n      platformsOptions: [\n        { key: \"a-platform\", name: \"a-platform\" },\n        { key: \"b-platform\", name: \"b-platform\" },\n        { key: \"c-platform\", name: \"c-platform\" }\n      ],\n      rules: {\n        pictureUrl: [{ validator: validateRequire }],\n        name: [{ validator: validateRequire }],\n        description: [{ validator: validateRequire }],\n        pictureUrl: [{ validator: validateSourceUri, trigger: \"blur\" }]\n      }\n    };\n  },\n  computed: {\n    contentShortLength() {\n      return this.postTask.description.length;\n    }\n  },\n  created() {\n    if (this.isEdit) {\n      this.fetchData();\n    } else {\n      this.postTask = Object.assign({}, defaultTask);\n    }\n  },\n  methods: {\n    handleRemove(file, fileList) {\n      console.log(file, fileList);\n    },\n    handlePictureCardPreview(file) {\n      this.dialogImageUrl = file.url;\n      this.dialogVisible = true;\n    },\n    handlePictureSuccess(response, file, fileList){\n       this.postTask.pictureUrl=response\n    },\n    fetchData() {\n      let id = this.$route.params.taskId;\n      fetchTask(id)\n        .then(response => {\n          this.postTask = response;\n        })\n        .catch(err => {\n          this.fetchSuccess = false;\n          console.log(err);\n        });\n    },\n    submitForm() {\n      this.postTask.displayTime = parseInt(this.postTask.displayTime.getTime());\n      console.log(this.postTask);\n      createTask(this.postTask);\n      this.$refs.postTask.validate(valid => {\n        if (valid) {\n          this.loading = true;\n          this.$notify({\n            title: \"成功\",\n            message: \"发布文章成功\